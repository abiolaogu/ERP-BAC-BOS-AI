# ============================================================================
# NEXUS Writer - Frontend Environment Configuration
# ============================================================================
# Copy this file to .env.local and update the values
# ============================================================================

# ============================================================================
# API Configuration
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8091/api/v1
NEXT_PUBLIC_GATEWAY_API_URL=http://localhost:8000/api
NEXT_PUBLIC_AUTH_API_URL=http://localhost:3001/auth

# ============================================================================
# WebSocket Configuration
# ============================================================================
NEXT_PUBLIC_WS_URL=ws://localhost:8091
NEXT_PUBLIC_COLLABORATION_WS_URL=ws://localhost:3008

# ============================================================================
# App Configuration
# ============================================================================
NEXT_PUBLIC_APP_NAME=NEXUS Writer
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_HUB_URL=http://localhost:3000

# ============================================================================
# Feature Flags
# ============================================================================
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=false
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_TEMPLATES=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_PRINT=true

# ============================================================================
# Session Configuration
# ============================================================================
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_TOKEN_REFRESH_INTERVAL=300000
NEXT_PUBLIC_AUTO_SAVE_INTERVAL=30000

# ============================================================================
# File Upload Configuration
# ============================================================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.doc,.docx,.odt,.rtf,.txt,.md

# ============================================================================
# Theme Configuration
# ============================================================================
NEXT_PUBLIC_DEFAULT_THEME=light
