# Server Configuration
NODE_ENV=development
PORT=8095
HOST=0.0.0.0
LOG_LEVEL=info

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3004

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nexus_meet
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=24h

# Mediasoup Configuration
# RTC Port Range for WebRTC
RTC_MIN_PORT=10000
RTC_MAX_PORT=10100

# Mediasoup Listen IP (internal IP for Docker, 0.0.0.0 for local)
MEDIASOUP_LISTEN_IP=0.0.0.0

# Mediasoup Announced IP (external/public IP for clients to connect)
# Leave empty for local development, set to your server's public IP in production
MEDIASOUP_ANNOUNCED_IP=

# Recording Configuration
RECORDING_ENABLED=false
RECORDING_STORAGE_PATH=/tmp/recordings
MAX_RECORDING_DURATION=7200

# Optional: Sentry for error tracking
# SENTRY_DSN=

# Optional: AWS S3 for recording storage
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=nexus-meet-recordings

# Optional: Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@nexusmeet.com

# Optional: Webhook for meeting events
# WEBHOOK_URL=
# WEBHOOK_SECRET=
