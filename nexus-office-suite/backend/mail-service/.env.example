# Server Configuration
SERVER_PORT=8085
ENVIRONMENT=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3005
JWT_SECRET=your-secret-key-change-in-production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=nexus_mail
DB_SSLMODE=disable

# SMTP Server Configuration
SMTP_ENABLED=true
SMTP_HOST=0.0.0.0
SMTP_PORT=1025
SMTP_DOMAIN=nexusmail.local
SMTP_MAX_MESSAGE_SIZE=26214400
SMTP_TLS_ENABLED=false
SMTP_CERT_FILE=
SMTP_KEY_FILE=

# IMAP Server Configuration
IMAP_ENABLED=true
IMAP_HOST=0.0.0.0
IMAP_PORT=1143
IMAP_TLS_ENABLED=false
IMAP_CERT_FILE=
IMAP_KEY_FILE=

# POP3 Server Configuration (Optional)
POP3_ENABLED=false
POP3_HOST=0.0.0.0
POP3_PORT=1110
POP3_TLS_ENABLED=false

# Storage Configuration (MinIO/S3)
STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=nexus-mail-attachments
MINIO_USE_SSL=false
MINIO_REGION=us-east-1

# Elasticsearch Configuration
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=nexus_emails

# Security Configuration
SPAMASSASSIN_HOST=localhost
SPAMASSASSIN_PORT=783
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
ENABLE_SPAM_FILTER=false
ENABLE_VIRUS_SCANNING=false

# Email Configuration
MAX_ATTACHMENT_SIZE=26214400
MAX_RECIPIENTS_PER_EMAIL=100
ENABLE_READ_RECEIPTS=true
DEFAULT_QUOTA_MB=5120

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
