# Server Configuration
PORT=8091
HOST=0.0.0.0
ENV=development

# Database Configuration
DATABASE_URL=postgres://nexus:nexus_password@localhost:5432/nexus_writer?sslmode=disable
DATABASE_MAX_CONNECTIONS=25
DATABASE_MAX_IDLE_CONNECTIONS=5

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=nexus-documents

# Kafka Configuration (for event streaming)
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_DOCUMENTS=documents.events

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1h

# File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
MAX_DOCUMENT_SIZE=52428800  # 50MB in bytes

# Export Configuration
EXPORT_TEMP_DIR=/tmp/nexus-exports
EXPORT_TIMEOUT=30s

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
