# Server Configuration
PORT=3006
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nexus_time_attendance
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# IDaaS Integration
IDAAS_URL=http://localhost:3005
IDAAS_API_KEY=your-idaas-api-key

# Biometric Devices
BIOMETRIC_DEVICE_POLL_INTERVAL=30000
BIOMETRIC_MAX_RETRY_ATTEMPTS=3
BIOMETRIC_CONNECTION_TIMEOUT=10000

# Remote Work Agent
AGENT_HEARTBEAT_INTERVAL=300000
AGENT_ACTIVITY_UPLOAD_INTERVAL=600000
AGENT_SCREENSHOT_INTERVAL=600000
AGENT_SCREENSHOT_QUALITY=60

# Productivity Scoring
PRODUCTIVITY_SCORE_PRODUCTIVE=1.0
PRODUCTIVITY_SCORE_COMMUNICATION=0.8
PRODUCTIVITY_SCORE_NEUTRAL=0.5
PRODUCTIVITY_SCORE_UNPRODUCTIVE=0.0

# Notifications
NOTIFICATION_LATE_ARRIVAL_THRESHOLD=15
NOTIFICATION_EARLY_DEPARTURE_THRESHOLD=15
NOTIFICATION_OVERTIME_THRESHOLD=60

# Storage
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads
SCREENSHOT_RETENTION_DAYS=30

# Webhooks
WEBHOOK_TIMEOUT=10000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAYS=1000,5000,15000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
