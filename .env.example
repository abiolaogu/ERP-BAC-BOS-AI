# ============================================================================
# BAC Platform Environment Variables
# ============================================================================
# Copy this file to .env and fill in the values
# SECURITY WARNING: Never commit .env files with real credentials to git!
# ============================================================================

# ============================================================================
# Environment
# ============================================================================
NODE_ENV=development
LOG_LEVEL=info

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL credentials - CHANGE THESE IN PRODUCTION!
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nexus

# Full database URL (constructed from above or custom)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/nexus?sslmode=disable

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379
# For production with authentication:
# REDIS_URL=redis://:password@localhost:6379

# ============================================================================
# Kafka/Redpanda Configuration
# ============================================================================
KAFKA_BROKERS=localhost:9092

# ============================================================================
# Object Storage (MinIO/S3)
# ============================================================================
# CHANGE THESE CREDENTIALS IN PRODUCTION!
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# ============================================================================
# Authentication & Security
# ============================================================================
# CRITICAL: Generate secure secrets for production!
# Use: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-min-32-chars-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars-change-in-production
JWT_EXPIRES_IN=1h

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000

# ============================================================================
# Monitoring & Observability
# ============================================================================
# Grafana - CHANGE THESE IN PRODUCTION!
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ============================================================================
# Google Workspace Integration
# ============================================================================
GOOGLE_CREDENTIALS_JSON='{
  "type": "service_account",
  "project_id": "your-project-id",
  "private_key_id": "your-key-id",
  "private_key": "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n",
  "client_email": "your-service-account@your-project.iam.gserviceaccount.com",
  "client_id": "your-client-id",
  "auth_uri": "https://accounts.google.com/o/oauth2/auth",
  "token_uri": "https://oauth2.googleapis.com/token"
}'

# ============================================================================
# Odoo Integration
# ============================================================================
ODOO_BASE_URL=https://your-instance.odoo.com
ODOO_DATABASE=your-database
ODOO_USERNAME=integration-user
ODOO_PASSWORD=secure-password

# ============================================================================
# Zoho Integration
# ============================================================================
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token

# ============================================================================
# AI/LLM API Keys
# ============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_AI_API_KEY=...

# ============================================================================
# Payment Providers
# ============================================================================
STRIPE_SECRET_KEY=sk_test_...
PAYSTACK_SECRET_KEY=sk_test_...

# ============================================================================
# Service Ports Reference
# ============================================================================
# Core Services:
#   nexus-engine:      8080
#   crm-service:       8081
#   finance-service:   8082
#   documents-service: 8083
#   hr-service:        8084
#   inventory-service: 8085
#   ai-service:        8086
#   projects-service:  8087
#   marketing-service: 8088
#   support-service:   8089
#
# Integration Services:
#   google-workspace:  8090
#   odoo-integration:  8091
#   zoho-integration:  8092
#
# Infrastructure:
#   postgres:          5432
#   redis:             6379
#   redpanda:          9092
#   minio:             9000/9001
#   prometheus:        9090
#   grafana:           3001

HASURA_ENDPOINT=https://localhost:8080/v1/graphql

HASURA_ADMIN_SECRET=replace-with-local-secret

AUTH_TOKEN=replace-with-local-token
